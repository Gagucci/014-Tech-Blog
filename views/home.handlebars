{{!-- Display all blog posts --}}
{{#each posts}}
<div class="card mb-4">
    <div class="card-body">
        <h2 class="card-title">{{title}}</h2>
        <p class="card-text">{{body}}</p>
        <a href="/post/{{id}}" class="btn btn-primary">Read More &rarr;</a>
    </div>
    <div class="card-footer text-muted">
        Posted by {{user.username}} on {{createdAt}}
    </div>
</div>
{{/each}}